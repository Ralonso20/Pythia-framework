{
  "dashboard": {
    "id": null,
    "title": "Pythia Performance Dashboard",
    "tags": ["pythia", "performance", "benchmarks"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Messages Processing Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(pythia:message_processing_rate)",
            "legendFormat": "Total msg/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1000
                },
                {
                  "color": "green",
                  "value": 5000
                }
              ]
            },
            "unit": "ops"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Processing Latency",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pythia:message_processing_latency_p95",
            "legendFormat": "P95"
          },
          {
            "expr": "pythia:message_processing_latency_p99",
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "ms"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "pythia:error_rate * 100",
            "legendFormat": "Error %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pythia:memory_usage_mb",
            "legendFormat": "Memory MB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "decbytes"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "CPU Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pythia:cpu_usage_percent",
            "legendFormat": "CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Broker Performance - Kafka",
        "type": "timeseries",
        "targets": [
          {
            "expr": "kafka:messages_per_second",
            "legendFormat": "Kafka msg/sec"
          },
          {
            "expr": "kafka:consumer_lag_max",
            "legendFormat": "Consumer Lag"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Broker Performance - RabbitMQ",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rabbitmq:queue_messages_rate",
            "legendFormat": "RabbitMQ msg/sec"
          },
          {
            "expr": "rabbitmq:queue_depth",
            "legendFormat": "Queue Depth"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 8,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Broker Performance - Redis",
        "type": "timeseries",
        "targets": [
          {
            "expr": "redis:commands_per_second",
            "legendFormat": "Redis cmd/sec"
          },
          {
            "expr": "redis:memory_usage_mb",
            "legendFormat": "Redis Memory MB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 16,
          "y": 16
        }
      },
      {
        "id": 9,
        "title": "System Resources",
        "type": "timeseries",
        "targets": [
          {
            "expr": "system:cpu_usage_percent",
            "legendFormat": "System CPU %"
          },
          {
            "expr": "system:memory_usage_percent",
            "legendFormat": "System Memory %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "percent"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-5m",
      "to": "now"
    },
    "refresh": "1s",
    "schemaVersion": 16,
    "version": 1
  }
}
